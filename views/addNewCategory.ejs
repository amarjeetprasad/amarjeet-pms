<html>
    <head>
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <title>add-new-category</title>
    </head>
<!------ Include the above in your HEAD tag ---------->
<body>

    <div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Add New Category</div>
                    </div>     
                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                                    <% if(msg!==""){ %> 
                                    <p style="color: darkgreen; background-color: rgb(188, 248, 188); padding: 10px;"><%= msg %> </p>
                                    <% } %> 
                            <form id="loginform" class="form-horizontal" role="form" method="POST" action="/add-new-category">
                                        
                                <div style="margin-bottom: 25px" class="input-group">
                                            <span class="input-group-addon"><i class="bi bi-file-plus-fill"></i></span>
                                            <input id="login-username" type="text" class="form-control" name="Category" value="" placeholder="Enter new Category" required>                                        
                                </div>
                                <div style="margin-top:10px" class="form-group">
                                        <!-- Button -->
                                        <div class="col-sm-12 controls">
                                        <button id="btn-login"  class="btn btn-success" type="submit">Add  </button>
                                        </div>
                                </div>
                                <div class="form-group">
                                        <div class="col-md-12 control">
                                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                            <a href="/view-all-category" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                                view all Categories
                                            </a>
                                            </div>
                                        </div>
                                </div>    
                            </form>     
                        </div>                     
                    </div>  
        </div>
    </div>


</body>
</html>