<html>
    <head>
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
        <title>edit-password-details</title>
    </head>
<!------ Include the above in your HEAD tag ---------->
<body>
    <div class="container">    
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Edit Password Details</div>
                    </div>     
                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                                <% if(msg!="") { %> 
                                    <p style="color: green; background-color: rgb(184, 247, 184); padding: 10px;"><%= msg %> </p>
                                <% } %> 
                            <form id="loginform" class="form-horizontal" role="form" action="/view-all-password/edit/<%= Data._id %> " method="POST">
                                
                                <div style="margin-bottom: 25px" class="input-group">
                                    <p style="font-weight: bold;">Category</p>
                                    <select required name="Category" value="<%= Data.catName %> "  class="form-control" id="">
                                        <option value="" selected>Choose Password Category</option>
                                        <% Datas.forEach((data)=>{ %>
                                        <option value="<%= data.catName %> " ><%= data.catName %> </option>
                                        <%  }) %> 
                                    </select>   
                                </div>

                                <div style="margin-bottom: 25px" class="input-group">
                                            <p style="font-weight: bold;">Details</p>
                                            <textarea required  id="editor1" type="text" class="form-control" name="Details"  placeholder="Enter Password delete" rows="4" cols="25"><%= Data.details %></textarea>                                   
                                </div>
                                <div style="margin-top:10px" class="form-group">
                                        <!-- Button -->
                                        <div class="col-sm-12 controls">
                                        <button id="btn-login" type="submit" class="btn btn-success">Update  </button>
                                        </div>
                                </div>
                                <div class="form-group">
                                        <div class="col-md-12 control">
                                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                            <a href="/view-all-password" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                                view all Passwords
                                            </a>
                                            </div>
                                        </div>
                                </div>    
                            </form>     
                        </div>                     
                    </div>  
        </div>
    </div>
    <script>
        CKEDITOR.replace( 'editor1' );
    </script>
</body>
</html>